<h4 class="functions">Companies</h4>

<form action="/companies/new" method="GET">
  <input class="button"type="submit" value="Add New Company" />
</form>


<table>

  <tr>
    <th>Company</th>
    <th>Name</th>

  </tr>

  <% for company in @companies %>

  <tr>
    <form class="" action="/companies/<%=company.id%>" method="post">
      <td><%= company.id %></td>
      <td><%= company.name %></td>


      <td>
        <label>
          <select name="status">
            <% if company.status == 't'%>
            <option value="t">Activate</option>
            <option value="f">Deactivate</option>
            <%else%>
            <option value="f">Deactivate</option>
            <option value="t">Activate</option>
            <%end%>

          </select>

        </label>
        <input class="button" type="submit" value="Change"/>

      </td>
      </form>
      <%end%>
    </tr>



</table>
